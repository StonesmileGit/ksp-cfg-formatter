{
	"name": "ksp-cfg-lsp",
	"displayName": "KSP CFG Language Server",
	"description": "A language server for KSP cfg files with support for Module Manager syntax",
	"version": "0.0.1",
	"publisher": "Stonesmile",
	"repository": {
		"type": "git",
		"url": "https://github.com/StonesmileGit/ksp-cfg-formatter"
	},
	"categories": ["Programming Languages", "Linters", "Formatters"],
	"keywords": [
		"Kerbal Space Program",
		"KSP",
		"ksp",
		"Kerbal",
		"ksp",
		"cfg",
		"sfs",
		"craft",
		"modulemanager"
	  ],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:ksp-cfg"
	],
	"extensionDependencies": ["al2me6.ksp-cfg-support"],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Ksp Config Lsp Server configuration",
			"properties": {
				"KspCfgLspServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"KspCfgLspServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build-base -- --minify",
		"package": "vsce package -o ksp-cfg-lsp.vsix",
		"build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node16",
		"build": "npm run build-base -- --sourcemap",
		"watch": "npm run build-base -- --sourcemap --watch",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"test": "sh ./scripts/e2e.sh"
	},
	"dependencies": {
		"vscode-languageclient": "^8.1.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.75.1",
		"@vscode/test-electron": "^2.2.3",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^5.1.3",
		"esbuild": "^0.18.12"
	}
}